<!DOCTYPE html>
<html>
  <head>
    <title>Game Book</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <h1>Game Book</h1>
        <nav>
          <%= link_to 'Games', root_path %>
          <%= link_to 'Users', users_path%>
          <% if logged_in? %>
            <%= link_to current_user.name, user_path(id: session[:users]) %>
            <%= link_to 'Logout', '/sessions/' + session[:users].to_s , method: :delete  %>
          <%else%>
            <%= link_to 'Register', new_user_path %>
            <%= link_to 'Login', new_session_path %>
          <% end %>
        </nav>
      </header>
      <%= yield %>
    </div>
  </body>
</html>
